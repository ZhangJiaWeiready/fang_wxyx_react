@import "../../common/stylus/mixins.styl"$rem = 750/10rem.searchWrap  font-size (28/$rem)  header    width 100%    height (88/$rem)    background #ffffff    bottom-border-1px(#d9d9d9)    .search      height 100%      display flex      align-items center      padding (0 30/$rem)      .form        display inline-block        height (56/$rem)        width (564/$rem)        padding (0 20/$rem)        box-sizing border-box        background #f4f4f4        form          display flex          width 100%          height 100%          align-items center          .searchIcon            display inline-block            height (36/$rem)            width (36/$rem)            background url("./images/search.png") no-repeat            background-size 100%            vertical-align middle            margin-left (10/$rem)            margin-top (5/$rem)          .closeIcon            margin-right (20/$rem)            background url("./images/close.png") no-repeat            background-size 100%            display inline-block            margin-top (15/$rem)            width (50/$rem)            height (50/$rem)          >.shuru            display inline-block            height 100%            box-shadow none            width 100%            outline none            background #f4f4f4            margin-left (26/$rem)            color rgba(0,0,0,.8)      .back        margin-left (40/$rem)        color #333333  .hotSearch    padding (0 30/$rem 30/$rem 30/$rem)    margin-bottom (20/$rem)    background #ffffff    .hotTitle      width 100%      height (90/$rem)      text-align left      line-height (90/$rem)      color #999999    .hotContent      clearFix()      font-size (24/$rem)      .item        float left        height (45/$rem)        border 1px solid #999        text-align center        line-height (45/$rem)        padding (0 15/$rem)        margin-right (32/$rem)        margin-bottom (32/$rem)        border-radius (5/$rem)        &.hotItem          color #b4282d          border-color #b4282d  .result    background #fff    .resultWrap      padding-left (30/$rem)      font-size (26/$rem)      color #666      display flex      flex-direction column      background #fff      li        display inline-block        height (90/$rem)        bottom-border-1px(#d9d9d9)        span          line-height (90/$rem)