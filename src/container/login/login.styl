@import "../../common/stylus/mixins.styl"$rem = 375/10rem.personal  position relative  width 100%  height (667/$rem)  .logoText    height (45/$rem)    padding (80/$rem 0)    text-align center    img      display inline-block      height 100%  .loginButton    padding (0 20/$rem)    >.item      height (45/$rem)      border 1px solid #b4282d      margin-bottom (16/$rem)      text-align center      vertical-align middle      color #ffffff      line-height (45/$rem)      font-size (13/$rem)      display flex      justify-content center      align-items center      border-radius (5/$rem)    .phoneLogin      background #b4282d      .iconfont        font-size (16/$rem)        margin-right (8/$rem)    .emailLogin      color #b4282d      background #ffffff      .iconfont        font-size (16/$rem)        margin-right (8/$rem)    .register      display inline-block      width 100%      font-size (13/$rem)      line-height  (13/$rem)      text-align center      border 0      color #333333      span        margin-left (26/$rem)      .registerIcon        display inline-block        height (14/$rem)        width (14/$rem)        background url("./images/arrow.png") no-repeat        background-size 50%        margin-right (8/$rem)        text-align center        vertical-align middle        margin-left (6/$rem)        margin-top (-3/$rem)  .thirdWrap    font-size (14/$rem)    position absolute    width 100%    bottom (40/$rem)    text-align center    color #666666    >span      padding (0 20/$rem)      border-left 1px solid #666666      &:first-of-type        border 0