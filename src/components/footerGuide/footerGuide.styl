@import "../../common/stylus/mixins.styl"$rem = 750/10rem#guideWrap  position fixed  bottom -1px  left 0  z-index 10  width 100%  height (97/$rem)  .guideList    top-border-1px(#d9d9d9)    clearFix()    background-color #fafafa    height 100%    li      display flex      flex-direction column      justify-content center      align-items center      font-size (24/$rem)      width 20%      float left      height 100%      >i        margin-bottom (10/$rem)      &.on        color #b4282d        font-weight bold        font-size (26/$rem)        i          transform scale(1.1)